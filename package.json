{
  "name": "scaffold",
  "version": "0.0.0",
  "description": "Node.js project scaffold.",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "npm run clean && babel --out-dir dist/ src/",
    "eslint": "eslint src/",
    "test": "npm run eslint",
    "start": "npm run build && env $(cat .env) node index.js"
  },
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-plugin-transform-builtin-extend": "^1.1.0",
    "babel-preset-es2015": "^6.22.0",
    "eslint": "^3.13.1",
    "eslint-config-google": "^0.7.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.22.0",
    "co": "^4.6.0",
    "debug": "^2.6.0",
    "koa": "^1.2.4",
    "koa-bodyparser": "^2.3.0",
    "koa-compose": "^2.5.1",
    "koa-json": "^1.1.3",
    "koa-router": "^5.4.0",
    "lodash": "^4.17.4"
  },
  "eslintConfig": {
    "extends": "google",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "no-invalid-this": "off",
      "comma-dangle": [
        "error",
        "never"
      ],
      "require-jsdoc": "off",
      "valid-jsdoc": "off",
      "new-cap": "off",
      "arrow-parens": [
        "error",
        "as-needed"
      ]
    }
  }
}
